<Window x:Class="Exercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise1"
        mc:Ignorable="d"
        Title="Movies" Height="700" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="All movies" Margin="10">
            <ListView x:Name="MoviesListView" Margin="10" ItemsSource="{Binding Movies }">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Director" DisplayMemberBinding="{Binding Director}"/>
                        <GridViewColumn Header="Release year" DisplayMemberBinding="{Binding ReleaseYear}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox x:Name="NewMovieGroupBox" Header="Add a new movie" Grid.Row="1" Margin="10" >
            <Grid>
                <Label x:Name="TitleLabel" Content="_Title" HorizontalAlignment="Left" Margin="10,10,0,0"
                       VerticalAlignment="Top" Target="{Binding ElementName=TitleTextBox, Path=Name, Mode=OneWay}"/>
                <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top"
                         Width="150" Height="25" Margin="100,10,0,0" Text="{Binding Path=Title, Mode=TwoWay}"/>

                <Label x:Name="DirectorLabel" Content="_Director" HorizontalAlignment="Left" Margin="10,50,0,0"
                       VerticalAlignment="Top" Target="{Binding ElementName=DirectorTextBox, Path=Name, Mode=OneWay}"/>
                <TextBox x:Name="DirectorTextBox" HorizontalAlignment="Left" VerticalAlignment="Top"
                         Width="150" Height="25" Margin="100,50,0,0" Text="{Binding Path=Director, Mode=TwoWay}"/>

                <Label x:Name="ReleaseYearLabel" Content="_Release year" HorizontalAlignment="Left" Margin="10,90,0,0"
                       VerticalAlignment="Top" Target="{Binding ElementName=ReleaseYearTextBox, Path=Name, Mode=OneWay}"/>
                <TextBox x:Name="ReleaseYearTextBox" HorizontalAlignment="Left" VerticalAlignment="Top"
                         Width="150" Height="25" Margin="100,90,0,0" Text="{Binding Path=ReleaseYear, Mode=TwoWay}"/>

                <Button x:Name="AddNewMovieButton" HorizontalAlignment="Left" Margin="10,140,10,10"
                        VerticalAlignment="Top" Click="AddNewMovieButton_OnClick">
                    Add Movie
                </Button>
                <TextBlock x:Name="ErrorMessageTextBlock" HorizontalAlignment="Left" Margin="100,140,10,10"
                           VerticalAlignment="Top"
                           Foreground="Red" FontSize="14">
                </TextBlock>
            </Grid>
        </GroupBox>
    </Grid>
</Window>